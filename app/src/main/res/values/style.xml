<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_transparent_with_border</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!-- Toolbar Title Style -->
    <style name="ToolbarTitleStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item> <!-- Back button color -->
        <item name="android:textColorSecondary">@android:color/white</item> <!-- Title and icon color -->
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:background">#332D2D</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:listPreferredItemHeight">48dp</item>

    </style>



</resources>
