<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingTop="12dp"
    android:background="@color/dark_maroon">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dark_maroon"
        android:theme="@style/ToolbarTheme"
        android:elevation="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/dark_maroon" />


    <TextView
        android:id="@+id/referenceIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reference ID: Example"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/latitudeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude: Example"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/longitudeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude: Example"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/townText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Town: Example"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/countyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="County: Example"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/postcodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postcode: Example"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/chargeDeviceStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charge Device Status: Example"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/connectorIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connector ID: Example"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/connectorTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connector Type: Example"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />
</LinearLayout>