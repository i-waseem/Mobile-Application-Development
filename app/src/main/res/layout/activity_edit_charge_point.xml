<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dark_maroon"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_maroon"
        android:elevation="4dp"
        android:title="Add Charge Point"
        android:titleTextColor="@android:color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:theme="@style/ToolbarTheme"
        app:popupTheme="@style/ToolbarTheme" />

    <!-- Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">

        <!-- Reference ID (Read-only) -->
        <EditText
            android:id="@+id/referenceIdInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reference ID"
            android:textColorHint="#60FFFFFF"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:inputType="text"
            android:enabled="false" />

        <!-- Latitude -->
        <EditText
            android:id="@+id/latitudeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Latitude"
            android:textColorHint="#60FFFFFF"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:inputType="numberDecimal" />

        <!-- Longitude -->
        <EditText
            android:id="@+id/longitudeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Longitude"
            android:textColorHint="#60FFFFFF"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:inputType="numberDecimal" />

        <!-- Town -->
        <EditText
            android:id="@+id/townInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Town"
            android:textColorHint="#60FFFFFF"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:inputType="text" />

        <!-- County -->
        <EditText
            android:id="@+id/countyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter County"
            android:textColorHint="#60FFFFFF"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:inputType="text" />

        <!-- Postcode -->
        <EditText
            android:id="@+id/postcodeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Postcode"
            android:textColorHint="#60FFFFFF"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:inputType="text" />

        <!-- Status -->
        <EditText
            android:id="@+id/statusInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Status"
            android:textColorHint="#60FFFFFF"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:inputType="text" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:background="@drawable/button_transparent_with_border"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:elevation="6dp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
